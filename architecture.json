{
  "project": "NeonTetris-MLRSA",
  "version": "1.0.0",
  "description": "Modern neon tetris game with deep features and addicting progression through levels",
  "architecture_overview": {
    "pattern": "Client-side MVC with Component-based Architecture",
    "deployment": "Single Page Application (SPA)",
    "performance_target": "60 FPS gameplay with smooth animations",
    "scalability": "Modular design for easy feature additions and maintenance"
  },

  "system": {
    "architecture_type": "Client-side Web Application",
    "communication_pattern": "Event-driven with Observer pattern",
    "data_flow": "Unidirectional with state management",
    "rendering_pipeline": "Canvas-based with WebGL acceleration",
    "performance_considerations": {
      "target_fps": 60,
      "max_frame_time": "16.67ms",
      "memory_management": "Object pooling for game pieces",
      "garbage_collection": "Minimize allocations during gameplay"
    }
  },

  "components": [
    {
      "name": "GameEngine",
      "responsibility": "Core tetris logic, game loop, and state management",
      "subcomponents": ["GameState", "PieceManager", "CollisionDetection", "LineClearing", "Scoring"]
    },
    {
      "name": "RenderingEngine",
      "responsibility": "Neon visual effects, animations, and canvas management",
      "subcomponents": ["CanvasRenderer", "EffectsManager", "ParticleSystem", "ShaderManager"]
    },
    {
      "name": "InputManager",
      "responsibility": "Handle keyboard, touch, and gamepad inputs with responsive controls",
      "subcomponents": ["KeyboardHandler", "TouchHandler", "GamepadHandler", "InputBuffer"]
    },
    {
      "name": "AudioEngine",
      "responsibility": "Sound effects, background music, and audio mixing",
      "subcomponents": ["SoundManager", "MusicManager", "AudioMixer", "EffectsProcessor"]
    },
    {
      "name": "ProgressionSystem",
      "responsibility": "Level progression, difficulty scaling, and reward management",
      "subcomponents": ["LevelManager", "DifficultyScaler", "AchievementSystem", "RewardCalculator"]
    },
    {
      "name": "UIFramework",
      "responsibility": "User interface, menus, and HUD management",
      "subcomponents": ["MenuSystem", "HUD", "DialogManager", "SettingsUI"]
    },
    {
      "name": "StorageManager",
      "responsibility": "Local storage, save games, and settings persistence",
      "subcomponents": ["SaveSystem", "SettingsStorage", "HighScoreManager", "StatisticsTracker"]
    },
    {
      "name": "NetworkManager",
      "responsibility": "Leaderboards and optional multiplayer features",
      "subcomponents": ["LeaderboardAPI", "ScoreSubmission", "PlayerStats", "MultiplayerCore"]
    }
  ],

